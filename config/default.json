{
  "Client": {
    "global": {
      "features": {
        "staticScores": true
      },
      "sourceLanguage": "greek",
      "targetLanguage": "english",
      "tokenizer": {
        "source": ["[^\\pL\\pM]+?","g"],
        "target": ["[^\\pL\\pM]+?","g"]
      },
      "ngram": {
        "source": 2,
        "target": 3
      }
    },

    "train": {
      "features": {
      }
    },

    "align": {
      "features": {
        "ngramPriority": true,
        "phraseCount": true,
        "sizeDelta": true,
        "penalties": true
      },
      "concurrency": 1,
      "penalties": {
        "divide": 1.5,
        "subtract": 0
      },
      "bonus": {
        "correction": 1.0
      },
      "corrections": {
        "ngramMultiplier": 10
      },
      "blankScores": {
        "phraseCount": 0.8,
        "wordOrder": 0.8,
        "sizeDelta": 0.8,
        "ngram": 0.8
      },
      "staticScoreRatios": {
        "phraseCount": 0.5,
        "wordOrder": 0.5,
        "sizeDelta": 0.5,
        "ngram": 0.5
      },
      "weights": {
        "ratio": 7,
        "uniqueness": 6,
        "phraseCount": 5,
        "wordOrder": 4,
        "sizeDelta": 3,
        "ngram": 2
      }
    }
  }
}
